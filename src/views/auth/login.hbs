<main class="col-lg-12 col-sm-12 d-flex justify-content-center align-items-center">
    <form class="d-flex justify-content-center align-items-center flex-column justify-items-center login-form" method="post">
        <h1 class="login-form__title mb-5">Login</h1>
        <div class="form-group login-form__group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control mb-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
            <small id="emailHelp" class="form-text text-light">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group login-form__group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control mb-2" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>

        <button type="submit" class="btn login-form__button mt-3">Login</button>
    </form>
</main>