<main class="col-lg-12 col-sm-12 d-flex justify-content-center align-items-center">
    <form class="d-flex justify-content-center align-items-center flex-column justify-items-center create-car-form" action="/cars/create" method="post">
        <h1 class="create-car-form__title mb-2">Sell a car</h1>
        <div class="form-group create-car-form__group">
            <label for="exampleInputEmail1">Brand</label>
            <input type="text" class="form-control mb-2" placeholder="Car brand" name="brand" value="{{brand}}">
        </div>
        <div class="form-group create-car-form__group">
            <label for="model">Model</label>
            <input type="text" class="form-control mb-2" placeholder="Model" name="model" value="{{model}}">
        </div>

        <div class="form-group create-car-form__group">
            <label for="region">Region</label>
            <input type="text" class="form-control mb-2" placeholder="Region" name="region" value="{{region}}">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Year of Manufacture</label>
            <input type="text" class="form-control mb-2" placeholder="Year of manufacture" name="yearOfManufacture"{{yearOfManufacture}}>
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Engine</label>
            <input type="text" class="form-control mb-2" placeholder="Engine" name="engine" value="{{engine}}">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Gearbox</label>
            <input type="text" class="form-control mb-2" placeholder="Gearbox" name="gearbox" value="{{gearbox}}">
        </div>

         <div class="form-group create-car-form__group">
            <label for="imageUrl">ImageUrl</label>
            <input type="text" class="form-control mb-2" placeholder="ImageUrl" name="imageUrl" value="{{imageUrl}}">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Price</label>
            <input type="number" class="form-control mb-2" placeholder="Price" name="price" value="{{price}}">
        </div>

        <button type="submit" class="btn btn-secondary create-car-form__button mt-3">Create new sale</button>
    </form>
</main>