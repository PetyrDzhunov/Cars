<main class="col-lg-12 col-sm-12 d-flex justify-content-center align-items-center">
    <div class='details-car-card mx-3 d-flex flex-column justify-content-center'>
    <div class="d-flex flex-row justify-content-center">
        <h1 class="details-car-card__brand mx-3">{{brand}}</h1>
        <h1 class="details-car-card__brand mx-3">{{model}}</h1>
    </div>
    <div class="d-flex flex-row justify-content-between">
        <p class="details-car-card__description"><span class="details-car-card__description-title"><span class="first-letter">R</span>egion: </span>{{region}}</p>
        <p class="details-car-card__description"><span class="details-car-card__description-title"><span class="first-letter">E</span>ngine: </span>{{engine}}</p>
    </div>
    <div class="d-flex flex-row justify-content-between">
        <p class="details-car-card__description"><span class="details-car-card__description-title"><span class="first-letter">G</span>earbox: </span>{{gearbox}}</p>
        <p class="details-car-card__description"><span class="details-car-card__description-title"><span class="first-letter">Y</span>ear: </span>{{yearOfManufacture}}</p>
        <p class="details-car-card__description"><span class="details-car-card__description-title"><span class="first-letter">P</span>rice: </span>{{price}}$</p>
    </div>
    {{#if user}}
        <div class="details-car-card__cta">
            {{#if isOwner}}
            <a href="/cars/{{_id}}/delete"><button class="btn btn-secondary">Delete</button></a>
            <a href="/cars/{{_id}}/edit"><button class="btn btn-secondary">Edit</button></a>
            {{else}}
            <a href="/cars/{{_id}}/buy"><button class="btn btn-secondary">Buy</button></a>
                {{#if hasItInFavourites}}
             <div class="d-flex details-car-card__hasFavourite justify-content-between">
                 <div class="d-flex flex-row">
                <i class="fas fa-star details-car-card__icon"></i>
                <p class="details-car-card__favourite">You have already added this car to your favourites!</p>
                 </div>
                <a href="/cars/{{_id}}/removeFromFavourites"><button class="btn btn-secondary">Remove from favourites</button></a>
            </div> 
                {{else}}
              <a href="/cars/{{_id}}/addToFavourites"><button class="btn btn-secondary">Add to favourites</button></a>
           
                {{/if}}
            {{/if}}
        </div>
        {{/if}}
        <div class='details-car-card__image-wrapper'>
            <img src='{{imageUrl}}'/>
        </div>
    </div>
</main>