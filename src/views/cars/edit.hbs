<main class="col-lg-12 col-sm-12 d-flex justify-content-center align-items-center">
    <form class="d-flex justify-content-center align-items-center flex-column justify-items-center create-car-form" method="post">
        <h1 class="create-car-form__title mb-5">Edit your car</h1>
        <div class="form-group create-car-form__group">
            <label for="exampleInputEmail1">Brand</label>
            <input type="text" class="form-control mb-2" placeholder="Car brand" name="brand">
        </div>
        <div class="form-group create-car-form__group">
            <label for="model">Model</label>
            <input type="text" class="form-control mb-2" placeholder="Model" name="model">
        </div>

        <div class="form-group create-car-form__group">
            <label for="region">Region</label>
            <input type="text" class="form-control mb-2" placeholder="Region" name="region">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Year of Manufacture</label>
            <input type="text" class="form-control mb-2" placeholder="Year of manufacture" name="yearOfManufacture">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Engine</label>
            <input type="text" class="form-control mb-2" placeholder="Engine" name="engine">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Transmission</label>
            <input type="text" class="form-control mb-2" placeholder="Transmission" name="transmission">
        </div>

        <div class="form-group create-car-form__group">
            <label for="exampleInputPassword1">Price</label>
            <input type="number" class="form-control mb-2" placeholder="Price" name="price">
        </div>

        <button type="submit" class="btn btn-secondary create-car-form__button mt-3">Edit</button>
    </form>
</main>