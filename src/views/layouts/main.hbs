<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/style.css">
    <title>{{title}}</title>
</head>

<body style="background: #A9927D;">
        <div class="navigation-container col-lg-12 col-sm-12 bg-dark fixed-top">
            <nav class="header-navbar navbar navbar-dark navbar-expand-xl mx-5">
                <a href="/" class="navbar-brand"><img src="/static/images/car-logo.png" alt="logo"></a>
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon bg-primary"></span>
            </button>

                <div class="navbar-collapse collapse" id="navbar">
                    <ul class="navbar-nav bg-dark ms-auto">
                        {{#if user}}     
                        <li class="nav-item"><a class="nav-link">Hello , {{user.name}}</a></li>
                        <li class="nav-item"><a href="/search" class="nav-link">Search</a></li>
                        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="/cars/create" class="nav-link">Create new sale</a></li>
                        <li class="nav-item"><a href="/cars/my-cars" class="nav-link">My cars</a></li>
                        <li class="nav-item"><a href="/cars/favourite-cars" class="nav-link">Favourite Cars</a></li>
                        <li class="nav-item"><a href="/auth/logout" class="nav-link">Logout</a></li>
                        <li class="nav-item"><a class="nav-link" style="color: aqua !important;">Budget :{{user.budget}}</a></li>
                        
                        {{else}}
                        <li class="nav-item"><a class="nav-link">Search</a></li>
                        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="/auth/login" class="nav-link">Login</a></li>
                        <li class="nav-item"><a href="/auth/register" class="nav-link">Register</a></li>
                        {{/if}}
                    </ul>
                </div>
            </nav>
        </div>

        {{#if errors}}
       <div class="notifications notifications__error alert alert-warning alert-dismissible fade show d-flex flex-column" role="alert">
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            {{#each errors}}
           <p class="notifications__description">{{this}}</p> 
            {{/each}}
            </div>
        </div>
        {{/if}}

    {{{body}}}
    
    <footer class="text-center text-white bg-dark col-lg-12 col-sm-12">
        <div class="container pt-4">
            <p class="">&copy; Petar Dzhunov</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>